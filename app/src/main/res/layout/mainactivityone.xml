<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/maincontainer"
    android:layout_width="240px"
    android:layout_height="400px"
    android:background="@drawable/bk"
    android:orientation="vertical"
    android:screenOrientation="portrait"
    tools:context=".MainActivity">
    <!--标题-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_marginTop="4px"
            android:text="双流气象"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:paddingTop="2px"
            android:textColor="#ff0"
            android:textSize="27px" />
    <TextView
        android:layout_marginTop="4px"
        android:id="@+id/titles"
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="1.1"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="3px"
        android:paddingTop="2px"
        android:textColor="#ff0"
        android:textSize="18px" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/content_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/leftsize"
        android:layout_marginRight="@dimen/rightsize"
        android:layout_weight="5"
        android:gravity="center"
        android:orientation="horizontal">


    </LinearLayout>

    <TextView
        android:visibility="gone"
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal|bottom"
        android:lineSpacingExtra="1px"
        android:paddingBottom="4dp"
        android:text="双流气象"
        android:textColor="#FFF"
        android:textScaleX="1"
        android:textSize="40px" />
    <com.kelin.add.kelinsite.add.MarqueeView
        android:id="@+id/weatherinfo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal|bottom"
        android:lineSpacingExtra="1px"
        android:paddingBottom="2dp"
        android:visibility="gone"
        app:marqueeview_repet_type="repet_interval"
        app:marqueeview_text_color="#fff"
        app:marqueeview_text_distance="100"
        app:marqueeview_text_size="12"
        app:marqueeview_text_speed="0.3"

        />

</LinearLayout>